<?xml version="1.0" encoding="utf-8"?>
<jnlp spec="7.0+" href="$outputFile" codebase="$nem-code-base" version="$project.version">
  <information>
    <title>NEM Client</title>
    <vendor>NEM Community</vendor>
    <homepage href="http://www.ournem.com"/>
    <description>NEM Client</description>
    <description kind="short">NEM Client</description>
    <description kind="one-line">NEM Client</description>
    <description kind="tooltip"></description>
    <icon kind="shortcut" href="images/nom_64x64.ico"/>
    <icon href="images/nom_32x32.png"/>
    <icon kind="splash" href="images/splash_screen.png"/>
    <shortcut online="true" install="true">
      <desktop/>
      <menu submenu="NEM"/>
    </shortcut>
  </information>
  <security>
      <all-permissions/>
  </security>
  <update check="always" policy="always"></update>
  <resources>
    <java version="1.8+" java-vm-args="-esa -Xnoclassgc"/>
    $dependencies
<!-- Progress Bar add download="progress" -->
</resources>
<application-desc main-class="$mainClass" progress-class="org.nem.client.download.SplashProgressBar">
    <argument>-nccConfig</argument>
    <argument>ncc-config.properties</argument>
    <argument>-nisConfig</argument>
    <argument>nis-config.properties</argument>
</application>
</jnlp> 
